<div class="container">
  <div class="landing-slide">
    <div class="bd-example">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" data-interval="5000">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <% for(let i = 0; i < sliderServices.length; i++) { %>
          <div class="carousel-item <% if(i==1) { %> <%= 'active' %> <% } %>">
            <a href="/services/<%= sliderServices[i].url %>">
              <img src="<%= sliderServices[i].imgs_url[0] %>" class="d-block w-100 img-slider" alt="image slide">
            </a>
            <div class="carousel-caption d-none d-md-block">
              <h1><%= sliderServices[i].name %></h1>
              <h3><%= sliderServices[i].address %></h3>
            </div>
          </div>
          <% } %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  <div class="flashsale-coupon">
    <div class="my-4">
      <hr class="my-4">
      <!--Carousel Wrapper-->
      <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">
        <!--Indicators-->
        <ol class="carousel-indicators">
          <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
          <li data-target="#multi-item-example" data-slide-to="1"></li>
        </ol>
        <!--/.Indicators-->

        <!--Slides-->
        <div class="carousel-inner" role="listbox">

          <!--First slide-->
          <div class="carousel-item active">
            <div class="row">
              <% for(let i = 0; i < flashsaleServices.length/2; i++) { %>
              <div class="col-lg-4">
                <div class="card mb-2">
                  <a href="services/<%= flashsaleServices[i].url %>">
                    <img class="card-img-top" src="<%= flashsaleServices[i].imgs_url[1] %>" alt="Card image cap">
                  </a>
                  <div class="card-body">
                    <h2 class="card-title clearfix">
                      <%= flashsaleServices[i].name.substring(0, flashsaleServices[i].name.length > 30 ? 30 : flashsaleServices[i].name.length) + '...' %>
                    </h2>
                    <h4 class="card-text">
                      <%= flashsaleServices[i].address.substring(0, flashsaleServices[i].address.length > 40 ? 40 : flashsaleServices[i].address.length) + '...' %>
                    </h4>
                    <div class="d-flex justify-content-center">
                      <a href="/services/<%= flashsaleServices[i].url %>" class="btn btn-danger">Giảm giá đến
                        <%= flashsaleServices[i].flashsale %>%</a>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
          <!--/.First slide-->

          <!--Second slide-->
          <div class="carousel-item">
            <div class="row">

              <% for(let i = flashsaleServices.length/2; i < flashsaleServices.length; i++) { %>
              <div class="col-lg-4">
                <div class="card mb-2">
                  <a href="services/<%= flashsaleServices[i].url %>">
                    <img class="card-img-top" src="<%= flashsaleServices[i].imgs_url[1] %>" alt="Card image cap">
                  </a>
                  <div class="card-body">
                    <h2 class="card-title clearfix">
                      <%= flashsaleServices[i].name.substring(0, flashsaleServices[i].name.length > 30 ? 30 : flashsaleServices[i].name.length) + '...' %>
                    </h2>
                    <h4 class="card-text">
                      <%= flashsaleServices[i].address.substring(0, flashsaleServices[i].address.length > 40 ? 40 : flashsaleServices[i].address.length) + '...' %>
                    </h4>
                    <div class="d-flex justify-content-center">
                      <a href="/services/<%= flashsaleServices[i].url %>" class="btn btn-danger">Giảm giá đến
                        <%= flashsaleServices[i].flashsale %>%</a>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>

            </div>
          </div>
          <!--/.Second slide-->

        </div>
        <!--/.Slides-->
      </div>
      <!--/.Carousel Wrapper-->


    </div>
  </div>
