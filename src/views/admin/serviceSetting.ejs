<div class="container">
    <section class="wapper">
        <br></br>
        <br></br>
        <br></br>
        <div class="d-flex flex-row  justify-content-between">
            <a class="d-flex justify-content-start" href="/admin/services/list"><svg xmlns="http://www.w3.org/2000/svg"
                    width="50" height="50" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                </svg></a>
            <div class="d-flex justify-content-end">

                <form action="/setting/update" method="POST"><button disabled class=" btn btn-register"> <svg
                            xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                            class="bi bi-save" viewBox="0 0 16 16">
                            <path
                                d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                        </svg></button></form>
                <form action="/setting/status/" method="POST">
                    <button class="btn btn-register" disabled>
                        <% if (service.status == 'disabled' ) { %> <svg xmlns="http://www.w3.org/2000/svg" width="50"
                            height="50" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path
                                d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                        </svg>
                        <% } else { %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                            class="bi bi-x-octagon" viewBox="0 0 16 16">
                            <path
                                d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353L4.54.146zM5.1 1L1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1H5.1z" />
                            <path
                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg>
                        <% } %>
                    </button>
                </form>
            </div>
        </div>
        <br></br>

        <h3>Thông tin cơ bản</h3>
        <form class="form-horizontal" action="#" method="POST">
            <div class="d-flex form-group flex-row">
                <label class="control-label col-sm-2" for="tencuahang">Tên cửa hàng:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="tencuahang" placeholder="<%= service.name %>"
                        name="tencuahang">
                </div>
                <label class="control-label col-sm-2" for="loaihinhcuahang">Loại hình cửa hàng:</label>
                <div class="col-sm-3">
                    <select class="form-control" id="loaihinhcuahang" name="loaihinhcuahang">
                        <option>Quán cà phê</option>
                        <option selected>Nhà hàng</option>
                    </select>


                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="diachicuahang">Địa chỉ:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="diachicuahang" placeholder="<%= service.address %>"
                        name="diachicuahang">
                </div>
            </div>
            <div class="d-flex form-group flex-row">
                <label class="control-label col-sm-2" for="khoanggia">Khoảng giá:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="khoanggia" name="price_range"
                        value="<%=service.price_range %>">
                </div>

                <label class="control-label col-sm-2" for="giohoatdong">Thời gian mở cửa - đóng cửa:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="giohoatdong" name="operating"
                        value="<%=service.operating %>">
                </div>

            </div>
            <div class="d-flex form-group flex-row">
                <label class="control-label col-sm-2" for="phuhopvoi">Phù hợp với:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="phuhopvoi"
                        value="<%=service.description[0].description%>" name="phuhopvoi">
                </div>
            </div>

            <div class="d-flex form-group flex-row">
                <label class="control-label col-sm-2" for="khonggian">Không gian:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="khonggian" name="khonggian"
                        value="<%=service.description[2].description%>">
                </div>
                <label class="control-label col-sm-2" for="mondacsac">Món đặc sắc:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="mondacsac" name="mondacsac"
                        value="<%=service.description[1].description%>">
                </div>
            </div>

            <div class="d-flex form-group flex-row ">
                <label class="control-label col-sm-2" for="diemdactrung">Điểm đặc trưng:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="diemdactrung" name="diemdactrung"
                        value="<%=service.description[4].description%>">
                </div>
                <label class="control-label col-sm-2" for="uudai">Ưu đãi:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="uudai" name="uudai" value="<%=service.flash_sale%>">
                </div>
            </div>
            <h3>Giới thiệu cửa hàng</h3>

            <div class="d-flex form-group flex-row">
                <label class="control-label col-sm-1" for="gioithieu">Giới thiệu:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="gioithieu" placeholder="Thông tin cửa hàng"
                        name="gioithieu">
                </div> <label class="control-label col-sm-1" for="hinhanh">Hình ảnh:</label>
                <div class="col-sm-4">
                    <input type="file" class="form-control" multiple="multiple">
                </div>
            </div>
            <br></br>
            <br></br>


        </form>
    </section>
</div>