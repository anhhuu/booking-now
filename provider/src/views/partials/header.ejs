<div class="header">
    <nav class="navbar fixed-top bg-danger py-0">
        <a class="navbar-brand py-0" href="/">
            <img class="img-fluid" id="logo" src="/resources/img/booking_now_200x200_white.png" width="50" height="50"
                loading="lazyload" alt="logo">
        </a>
        <form action="/search" method="GET" id="searchForm">
            <div class="d-flex justify-content-center">
                <div class="d-flex justify-content-center h-100">
                    <div class="searchbar">
                        <input class="search_input" type="text" name="q" placeholder="Search...">
                        <button style="border-width: 0px" type="submit" class="search_icon"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </form>

        <div class="dropdown">
            <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <svg width="2.5rem" height="2.5rem" viewBox="0 0 16 16" class="bi bi-list" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                        d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                </svg>
                <svg width="2.5rem" height="2.5rem" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z" />
                    <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    <path fill-rule="evenodd"
                        d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z" />
                </svg>
                <span class="caret"></span>
            </button>
            <% if(!user) { %>
            <div class="dropdown-menu bg-transparent dropdown-menu-right animate" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item btn big-register" data-toggle="modal" href="javascript:void(0)"
                    onclick="openLoginModal();">Log in</a>
                <a class="dropdown-item btn big-register" data-toggle="modal" href="javascript:void(0)"
                    onclick="openRegisterModal();">Register</a>
                <a class="dropdown-item btn big-register" href="#"> Host</a>
                <a class="dropdown-item btn big-register" href="#"> Contact</a>
            </div>
            <% } else { %>
            <div class="dropdown-menu bg-transparent dropdown-menu-right animate" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item btn big-register" data-toggle="modal" href="/users/profile">Thông
                    tin tài khoản</a>
                <a class="dropdown-item btn big-register" data-toggle="modal" href="javascript:void(0)" onclick="">Lịch
                    sử đặt chỗ</a>
                <a class="dropdown-item btn big-register" href="/logout">Đăng xuất</a>
            </div>
            <% } %>
        </div>
    </nav>
</div>